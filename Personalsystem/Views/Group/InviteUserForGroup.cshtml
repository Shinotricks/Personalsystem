@model Personalsystem.Viewmodels.UserInviteViewModel
@{
    ViewBag.Title = "InviteUserForGroup";
}

<h3>Invite User to @Html.ViewBag.Name</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>@Html.ViewBag.groupName</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-0 col-md-12">
                @Html.DropDownListFor(model => model.SelectedUser, Model.Users, htmlAttributes: new { @class = "form-control" })
            </div>
            <hr />
        </div>

        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <hr />
        </div>
    </div>
}

<div>
   @Html.ActionLink("Back to Boss Index", "../Group/IndexBoss"})
   
</div>

@section Scripts {
       @Scripts.Render("~/bundles/jqueryval")
}

